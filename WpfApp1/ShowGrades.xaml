<!-- Shows list of students -->
    <Window x:Class="GradesTrakkerApp.ShowGrades"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradesTrakkerApp"
        mc:Ignorable="d"
        Title="ShowGrades" Height="450" Width="340">
    <Grid Background="#FF54494B">
        <DataGrid x:Name="DataGrid2" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="311" Margin="26,44,0,0" VerticalAlignment="Top" Width="285" ScrollViewer.CanContentScroll="True"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto" />
        <Button Content="Close" Background="#FFB98389" HorizontalAlignment="Left" Margin="122,377,0,0" VerticalAlignment="Top" Width="87" Click="Button_Click" RenderTransformOrigin="-0.168,0.469" Height="33"/>

    </Grid>
</Window>
